<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
    <thead>
        <tr>
            <th>Company</th>
            <th>From</th>
            <th>To</th>
            <th>Departure</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @bookings_detail.each do |booking| %>
        <tr>
            <td><%= booking.ticket.company %></td>
            <td><%= booking.ticket.from %></td>
            <td><%= booking.ticket.to %></td>
            <td><%= booking.ticket.departure %></td>
            <td><%= link_to 'Show', booking %></td>
            <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
            <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>