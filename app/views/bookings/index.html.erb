<h1><%="#{current_user.email[0,current_user.email.index('@')]}'s bookings"  %></h1>

<table>
    <thead>
        <tr>
            <th>Company</th>
            <th>From</th>
            <th>To</th>
            <th>Departure</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @bookings_detail.each do |booking| %>
        <tr>
            <td><%= booking.ticket.company %></td>
            <td><%= booking.ticket.from %></td>
            <td><%= booking.ticket.to %></td>
            <td><%= booking.ticket.departure.to_formatted_s(:long)    %></td>
            <% if get_hours(booking.ticket.departure-DateTime.now)>0 %>
            <td><%= link_to 'Cancel', booking, method: :delete, data: { confirm: 'Are you sure?' }%></td>
            <% else %>
            <td> Too late to cancel </td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>
<%= link_to 'Back to tickets', root_path %>